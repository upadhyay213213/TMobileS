<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_bar"
        layout="@layout/coustom_action_bar_sdk19" />

    <RelativeLayout
        android:layout_below="@+id/title_bar"
        android:id="@+id/reliid"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/sendreportBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@android:color/black"
            android:text="Support"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/sendreportText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mix@moodmedia.com"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_large"

            android:textColor="@color/gray_dark"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <RelativeLayout

        android:layout_below="@+id/reliid"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/sendLogBtN"

            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@android:color/black"
            android:text="SEND"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/sendLogText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please send logs"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_large"
            android:textColor="@color/gray_dark"
            android:layout_marginRight="80dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


</RelativeLayout>